{
  "name": "healthcare-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:public": "turbo run dev --filter=@healthcare/public",
    "dev:doctor": "turbo run dev --filter=@healthcare/doctor",
    "dev:admin": "turbo run dev --filter=@healthcare/admin",
    "dev:api": "turbo run dev --filter=@healthcare/api",
    "build": "turbo run build",
    "build:public": "turbo run build --filter=@healthcare/public",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "db:generate": "turbo run db:generate --filter=@healthcare/database",
    "db:push": "turbo run db:push --filter=@healthcare/database",
    "db:migrate": "turbo run db:migrate --filter=@healthcare/database",
    "db:migrate:deploy": "turbo run db:migrate:deploy --filter=@healthcare/database",
    "db:seed": "turbo run db:seed --filter=@healthcare/database",
    "db:studio": "turbo run db:studio --filter=@healthcare/database",
    "docs:sync": "tsx --env-file .env scripts/docs-sync.ts sync",
    "docs:sync-all": "tsx --env-file .env scripts/docs-sync.ts sync-all",
    "docs:list": "tsx --env-file .env scripts/docs-sync.ts list",
    "docs:status": "tsx --env-file .env scripts/docs-sync.ts status",
    "docs:history": "tsx --env-file .env scripts/docs-sync.ts history",
    "docs:purge": "tsx --env-file .env scripts/docs-sync.ts purge",
    "docs:cache-clear": "tsx --env-file .env scripts/docs-sync.ts cache-clear"
  },
  "devDependencies": {
    "tsx": "^4.19.2",
    "turbo": "^2.3.3"
  }
}
