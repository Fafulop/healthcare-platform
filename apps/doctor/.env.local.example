# Google OAuth (SAME credentials as admin)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# NextAuth
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your-random-secret-min-32-chars-generate-with-openssl

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/docs_mono

# API URL
NEXT_PUBLIC_API_URL=http://localhost:3003

# Public site URL (patient-facing app)
NEXT_PUBLIC_PUBLIC_URL=http://localhost:3000

# AI Provider Selection (openai | anthropic)
LLM_PROVIDER=openai
EMBEDDING_PROVIDER=openai

# OpenAI API (required for Whisper transcription, and when provider=openai)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic API (required when provider=anthropic)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
